@model WebApplication1.Models.Activities.Evidence

@{
    Layout = null;
}

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">@Html.DisplayFor(model => model.Title)</div>
        <div class="modal-body">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="form-group">
                            <table class="table-condensed">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Requester.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.LocalError.Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.Screen.Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.Problem.Description)</th>
                                </tr>
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayFor(model => model.Requester.Name)</td>
                                        <td>@Html.DisplayFor(model => model.LocalError.Description)</td>
                                        <td>@Html.DisplayFor(model => model.Screen.Name) - @Html.DisplayFor(model => model.Screen.Description)</td>
                                        <td>@Html.Raw(MvcHtmlString.Create(Server.HtmlDecode(Model.Problem.Title)).ToHtmlString())</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.Raw(MvcHtmlString.Create(Server.HtmlDecode(Model.Description)).ToHtmlString())
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>