@model WebApplication1.Models.Activities.EvidenceArchive

@{
    Layout = null;
}

@using (Html.BeginForm("Create", "EvidenceArchives", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">Selecione o arquivo</div>
            <div class="modal-body">

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Selecione o arquivo</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.EvidenceId)
                    @Html.HiddenFor(model => model.ApplicationUserId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.FileName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FileName, new { htmlAttributes = new { @class = "form-control", type = "file", multiple = "multiple" } })
                            @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $.validator.unobtrusive.parse(document);
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
